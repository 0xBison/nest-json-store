{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "types": ["jest"],
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "src/**/*.spec.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
